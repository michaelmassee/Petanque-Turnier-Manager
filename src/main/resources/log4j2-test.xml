<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="info" name="petanqueturniermanager" packages="">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>
		</Console>
		<RollingFile name="infofile" fileName="${sys:user.home}/.petanqueturniermanager/info.log" ignoreExceptions="false" 
					filePattern="${sys:user.home}/.petanqueturniermanager/info-%d{MM-dd-yyyy}.log.gz">
			<PatternLayout>
				<Pattern>%d %p %c{1.} %m%n</Pattern>
			</PatternLayout>

			<Policies>
				<!--  Triggers a rollover on every restart, but only if the file size is greater than zero.  -->
				<OnStartupTriggeringPolicy/>
				<SizeBasedTriggeringPolicy size="5 KB"/>
			</Policies>

			<!-- https://stackoverflow.com/questions/33237731/how-to-delete-old-logs-with-log4j2 -->
			<!-- http://logging.apache.org/log4j/2.x/manual/appenders.html#CustomDeleteOnRollover -->
			<DefaultRolloverStrategy>
				<Delete basePath="${sys:user.home}/.petanqueturniermanager/" maxDepth="1">
					<IfFileName glob="*.{gz,log}"/>
					<IfAny>
						<IfAccumulatedFileSize exceeds="500 MB"/>
						<IfAccumulatedFileCount exceeds="20"/>
					</IfAny>
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="error">
			<AppenderRef ref="Console"/>
		</Root>
		<Logger name="de.petanqueturniermanager" level="all">
			<AppenderRef ref="infofile"/>
		</Logger>
	</Loggers>
</Configuration>